<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="#11B9CF"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="APLIKASI PAHLAWAN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/textview8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4DD314"
        app:cardCornerRadius="20dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UJIAN TENGAH SEMESTER"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEKNOLOGI BERGERAK"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp">

    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:padding="10dp"
        android:src="@drawable/fotp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dewi Putri Ayuningsih"
        android:textAlignment="center"
        android:background="#11B9CF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A12.2019.06284"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#11B9CF"
        android:textSize="18dp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/tmbolbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4DD314"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="KirimData1"
        android:text="Masuk"
        android:textColor="@color/black" />


</LinearLayout>